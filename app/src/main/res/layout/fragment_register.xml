<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/horizontal_margin">


    <com.riteshakya.milestones.views.components.CustomEditText
        android:id="@+id/registerEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="john@gmail.com"
        android:inputType="textEmailAddress"
        android:label="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.riteshakya.milestones.views.components.CustomEditText
        android:id="@+id/registerPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="***********"
        android:inputType="textPassword"
        android:label="Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerEmail" />

    <TextView
        android:id="@+id/passwordHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Password must have a length of 6 digits and contain a number, alphabet"
        android:textAppearance="@style/TextAppearance.Widget.Goal.Purpose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerPassword" />

    <Button
        android:id="@+id/registerBtn"
        style="@style/Widget.Button"
        android:enabled="false"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordHint" />


</androidx.constraintlayout.widget.ConstraintLayout>