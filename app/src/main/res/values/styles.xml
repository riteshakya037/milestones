<resources>

    <style name="MilestoneTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_material_light_1</item>
        <item name="colorPrimaryDark">@color/primary_material_light_1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MilestoneTheme.Fullscreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="TextAppearance">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="TextAppearance.Bold" parent="TextAppearance">
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="TextAppearance.Italic" parent="TextAppearance">
        <item name="android:fontFamily">@font/open_sans_italic</item>
    </style>

    <style name="TextAppearance.Light" parent="TextAppearance">
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>

    <style name="TextAppearance.Golong" parent="TextAppearance">
        <item name="android:fontFamily">@font/golong_regular</item>
    </style>

    <style name="TextAppearance.TabWidget" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:backgroundTint">@drawable/background_button</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">33dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.Button.Light" parent="Widget.Button">
        <item name="android:backgroundTint">@drawable/background_button_light</item>
        <item name="android:textColor">#F17105</item>
    </style>


    <style name="TextAppearance.Widget.EditText.Label" parent="TextAppearance.Bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">#464646</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Widget.EditText.Text" parent="TextAppearance">
        <item name="android:theme">@style/AppTheme.InputLayout.Text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">#464646</item>
        <item name="android:textColorHint">#707070</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/edit_text_material_without_padding</item>
    </style>

    <style name="AppTheme.InputLayout.Text" parent="Theme.MaterialComponents">
        <!-- Inactive underline color-->
        <item name="colorControlNormal">#707070</item>
        <!-- Cursor and Active underline color, uses colorAccent by default if not defined-->
        <item name="colorControlActivated">@color/primary_material_light_1</item>
    </style>

    <style name="Widget.Toolbar.Expanded" parent="MilestoneTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/expanded_toolbar_size</item>
        <item name="android:paddingTop">24dp</item>
    </style>

    <style name="TextAppearance.Widget.Toolbar.Title" parent="TextAppearance.Golong">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Widget.Toolbar.Subtitle" parent="TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Widget.Goal.Title" parent="TextAppearance.Bold">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#464646</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearance.Widget.Goal.Purpose" parent="TextAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#464646</item>
    </style>

    <style name="TextAppearance.Widget.Goal.Badge" parent="TextAppearance.Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/button_capsule_background_enabled</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingEnd">@dimen/list_item_margin_thin</item>
        <item name="android:paddingStart">@dimen/list_item_margin_thin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Widget.Goal.Crushed" parent="TextAppearance.Bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_small</item>
        <item name="android:textColor">#464646</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Widget.Navigation.Text" parent="TextAppearance.Bold">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#464646</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/vertical_margin_tiny</item>
        <item name="android:paddingBottom">@dimen/vertical_margin_tiny</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_large</item>
        <item name="android:paddingStart">@dimen/vertical_margin_large</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingEnd">@dimen/vertical_margin_large</item>
    </style>

    <style name="TextAppearance.Widget.Toolbar.TextButton" parent="TextAppearance.Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/vertical_margin</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Button.Action" parent="TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#D11149</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>


    <style name="Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
    </style>
</resources>
